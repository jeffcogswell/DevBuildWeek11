@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<table class="table">
    <thead>
        <tr>
            <th>id</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (Category cat in Model)
		{
            <tr>
                <td>@cat.id</td>
                <td>@cat.name</td>
                <td>@cat.description</td>
                <td>
                    <a asp-action="DeleteCategory" asp-route-catid="@cat.id" class="btn btn-danger">Delete</a>
                    <a asp-action="EditCategory" asp-route-catid="@cat.id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Product" asp-action="ListProducts" asp-route-catid="@cat.id" class="btn btn-primary">Products</a>
                </td>
            </tr>
		}
    </tbody>
</table>
<a asp-action="NewCategory" class="btn btn-primary">New</a>